<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"

    >

    <RelativeLayout
        android:layout_width="@dimen/abc_action_bar_default_height_material"
        android:layout_height="match_parent"
        android:background="@color/menu_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_trip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/my_trip_btn" />

        <ImageView
            android:id="@+id/menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/home_btn"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_trip_btn"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/fav_btn" />

        <ImageView
            android:id="@+id/menu_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_fav_btn"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/message_btn" />

        <ImageView
            android:id="@+id/menu_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/account_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_blur" />

        <ImageView
            android:id="@+id/search_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="18dp"
            android:padding="30dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/search_logo"


            android:orientation="vertical"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/destination"
                android:textColor="@color/half_opacity_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/oval_edit"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <Spinner
                    android:id="@+id/search_destination_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:dropDownWidth="200dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="25dp"
                    android:src="@drawable/spinner" />
            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/search_find_btn"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="45dp"

            android:background="@drawable/oval_btn"
            android:text="@string/find_tour"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
