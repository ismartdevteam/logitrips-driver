<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/no_det_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/firstname"
                android:textColor="@color/half_opacity_white" />

            <EditText
                android:id="@+id/reg_fname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/oval_edit"

                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/lastname"
                android:textColor="@color/half_opacity_white" />

            <EditText
                android:id="@+id/reg_lname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/oval_edit"

                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/email"
                android:textColor="@color/half_opacity_white" />

            <EditText
                android:id="@+id/reg_email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/oval_edit"

                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/phone"
                android:textColor="@color/half_opacity_white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:background="@drawable/oval_edit"
                android:orientation="horizontal"
            >

                <Spinner
                    android:id="@+id/phone_country_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:dropDownWidth="200dp"/>
                <EditText
                    android:id="@+id/reg_phone"

                    android:background="@android:color/transparent"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:maxLines="1"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                android:textColor="@color/half_opacity_white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@drawable/oval_edit"

                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="25dp"
                    android:singleLine="true"
                    android:text="tamiraa"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/reg_show_pass_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@drawable/show_pass" />

            </RelativeLayout>

            <Button
                android:id="@+id/sign_up_btn"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"

                android:background="@drawable/oval_btn"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>
</RelativeLayout>
