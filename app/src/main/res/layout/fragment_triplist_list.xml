<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mytrip_mainRel"
    android:name="com.logitrips.userapp.TripListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="@string/no_available_trips" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mytrip_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.logitrips.userapp.TripListFragment"
        tools:listitem="@layout/trip_item" />
</RelativeLayout>