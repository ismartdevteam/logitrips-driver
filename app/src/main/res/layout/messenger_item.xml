<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
>


        <com.logitrips.driver.util.CircleImageView
            android:id="@+id/messages_driver_img"
            android:layout_width="70dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/menu_account"
            android:scaleType="centerCrop"
            android:layout_height="70dp"
            app:border_color="@android:color/transparent"
            app:border_width="0dp" />
    <LinearLayout
        android:layout_toRightOf="@+id/messages_driver_img"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/messages_driver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:singleLine="true"
            />
            <TextView
                android:id="@+id/messages_date"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:layout_weight="2"
                android:singleLine="true"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/messages_last"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:singleLine="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/text_gray"/>
    </LinearLayout>

</RelativeLayout>