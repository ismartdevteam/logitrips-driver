<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    tools:context="com.logitrips.userapp.menu.AccountFragment">

    <RelativeLayout
        android:layout_width="@dimen/abc_action_bar_default_height_material"
        android:layout_height="match_parent"
        android:background="@color/menu_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/home_btn"
            />

        <ImageView
            android:id="@+id/menu_trip_btn"
            android:layout_below="@+id/menu_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/my_trip_btn" />



        <ImageView
            android:id="@+id/menu_fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_trip_btn"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/fav_btn" />

        <ImageView
            android:id="@+id/menu_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_fav_btn"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/message_btn" />

        <ImageView
            android:id="@+id/menu_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/account_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <com.logitrips.userapp.util.CircleImageView
            android:id="@+id/account_pro_img"
            android:layout_width="95dp"

            android:src="@drawable/menu_account"
            android:layout_height="95dp"
            app:border_color="@android:color/transparent"
            app:border_width="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account_name"
            android:textStyle="bold"

            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/text_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="@string/email_shrt"/>
            <TextView
                android:id="@+id/account_email"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
             />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/text_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="@string/phone_cap"/>
            <TextView
                android:id="@+id/account_phone"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/text_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="@string/status"/>
            <TextView
                android:id="@+id/account_status"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/approved"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/text_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:text="@string/password_cap"/>
            <TextView
                android:id="@+id/account_change_password"
                android:paddingLeft="10dp"
                android:gravity="right"
                android:text="@string/change_pass"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="10dp"
            android:background="@color/text_gray"/>
        <Button
            android:id="@+id/account_log_out"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/log_out"
            android:textColor="@android:color/white"
            android:background="@drawable/oval_btn_grey"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
