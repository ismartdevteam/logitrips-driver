<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_off"
    tools:context="com.logitrips.driver.detail.CreateOffDay"
    android:orientation="vertical">


    <EditText
        android:id="@+id/off_reason_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/write_reason"
        android:padding="10dp"
        android:textColor="@color/chat_text_gray"
        android:textColorHint="@color/chat_text_gray" />

    <TextView
        android:id="@+id/off_pick_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/chat_text_gray" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/set_start_end_time"
        android:gravity="center"
        android:textColor="@color/text_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/off_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9:00"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/chat_text_gray" />

        <TextView
            android:id="@+id/off_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="21:00"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/chat_text_gray" />
    </LinearLayout>

    <TimePicker
        android:id="@+id/off_timepicker"
        android:visibility="invisible"
        android:timePickerMode="spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>